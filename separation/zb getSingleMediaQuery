getSingleMediaQuery(layout = 'card') {
  const baseFields = `
    id
    status
    score
    progress
  `;

  const mediaFields = {
    compact: `
      id
      title {
        romaji
      }
      coverImage {
        medium
      }
    `,
    card: `
      id
      title {
        romaji
        english
        native
      }
      coverImage {
        large
        medium
      }
      format
      averageScore
      status
    `,
    full: `
      id
      title {
        romaji
        english
        native
      }
      coverImage {
        large
        medium
      }
      episodes
      chapters
      genres
      format
      averageScore
      status
      startDate {
        year
        month
        day
      }
      endDate {
        year
        month
        day
      }
    `
  };

  const selectedMediaFields = mediaFields[layout] || mediaFields.card;

  return `
    query ($username: String, $mediaId: Int, $type: MediaType) {
      MediaList(userName: $username, mediaId: $mediaId, type: $type) {
        ${baseFields}
        media {
          ${selectedMediaFields}
        }
      }
    }
  `;
}